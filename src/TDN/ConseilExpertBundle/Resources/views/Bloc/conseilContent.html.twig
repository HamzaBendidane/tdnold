        <div class="col-1">
          <a href="{{ path('NanaBundle_profil', {'id': conseil.lnExpert.idNana}) }}">
            <img src="{{ avatar(conseil.lnExpert) }}" />
          </a>
        </div>
        <div class="col-2">
          <p class="bandeau">La r√©ponse de <a href="{{ path('NanaBundle_profil', {'id': conseil.lnExpert.idNana}) }}">{{ conseil.lnExpert.userName }}</a>
