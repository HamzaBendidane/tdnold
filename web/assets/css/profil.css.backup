#perso {
	margin: 40px 0 10px;
}

#enveloppe-avatar,
#enveloppe-data {
	display: table-cell;
	vertical-align: top;
}

#enveloppe-avatar {
	width: 50%;
	text-align: center;
}

#enveloppe-data h1 {
	margin-top: 0;
}

#enveloppe-data td {
	padding: 8px;
	border-bottom: 1px solid #E4F6F6;
}

#enveloppe-biographie {
	display: block;
	margin: 20px 0;
}

#enveloppe-biographie > div {
	display: inline-block;
	vertical-align: middle;
}

#enveloppe-biographie > div:first-child {
	width: 20%;
}

#reseau-tdn {
	margin:	10px 0;
	text-align: center;
}

#followers {
	background-color: #EBF2FA;
	border: 2px solid #D3E5E5;
	border-radius: 10px;
	display: inline-block;
	margin: 0px 10px;
	padding: 10px;
	text-align: left;
	width: -moz-calc(50% - 40px);
	width: -webkit-calc(50% - 40px);
	width: calc(50% - 40px);
}

#followings {
	border: 2px solid #D3E5E5;
	border-radius: 10px;
	display: inline-block;
	padding: 10px;
	text-align: left;
	width: -moz-calc(50% - 40px);
	width: -webkit-calc(50% - 40px);
	width: calc(50% - 40px);
}

#followers h2,
#followings h2 {
	font-style: italic;
}

#followers .densite,
#followings .densite {
	float: right;
}

#followers .taille,
#followings .taille {
	display: block;
}

#followers .trombines,
#followings .trombines {
	clear: both;
}

#followers .vignette,
#followings .vignette {
	width: 40px;
}

#hobbies,
#activite {
	background-image: linear-gradient(top, #C1EDEC 0%, #F1F4F9 54%);
   	background-image: -o-linear-gradient(top, #C1EDEC 0%, #F1F4F9 54%);
   	background-image: -moz-linear-gradient(top, #C1EDEC 0%, #F1F4F9 54%);
   	background-image: -webkit-linear-gradient(top, #C1EDEC 0%, #F1F4F9 54%);
   	background-image: -ms-linear-gradient(top, #C1EDEC 0%, #F1F4F9 54%);
   	background-image: -webkit-gradient(linear, left top, left bottom, color-stop(0, #C1EDEC), color-stop(0.54, #F1F4F9)); 
	border-radius: 10px;
	margin: 20px 0;
	padding: 10px;
}

#hobbies h1 {
	margin-top: 0;
}

#hobbies .enveloppe-hobby {
	background-color: white;
}

#hobbies .domaine {
	color: #4A8A8A;
	text-transform: uppercase;
}

#hobbies .enveloppe-vignettes {
	text-align: right;
}

#hobbies .vignette {
	width: 40px;
}

#activite .hrz {
	border: 2px solid #D3E5E5;
	border-radius: 10px 10px 0 0;
	display: inline-block;
	margin: 10px 0;
	padding: 10px;
	vertical-align: top;
	width: -webkit-calc(30% - 6px);
	width: calc(30% - 6px);
}

#pokes .wallpaper {
	background-image: linear-gradient(top, #C1EDEC 0%, #F1F4F9 54%);
   	background-image: -o-linear-gradient(top, #C1EDEC 0%, #F1F4F9 54%);
   	background-image: -moz-linear-gradient(top, #C1EDEC 0%, #F1F4F9 54%);
   	background-image: -webkit-linear-gradient(top, #C1EDEC 0%, #F1F4F9 54%);
   	background-image: -ms-linear-gradient(top, #C1EDEC 0%, #F1F4F9 54%);
   	background-image: -webkit-gradient(linear, left top, left bottom, color-stop(0, #C1EDEC), color-stop(0.54, #F1F4F9)); 
	border-radius: 10px;
	position: absolute;
	top: 0;
	bottom: 0;
	left: 15px;
	right: 25px;
	z-index: 1;
}

#pokes {
	position: relative;
}

#pokes h1 {
	left: 30px;
	position: relative;
	top: 15px;
	z-index: 10
}

#pokes #likes,
#pokes #votes {
	background-color: white;
	border: 2px solid #D3E5E5;
	border-radius: 10px 10px 0 0;
	display: inline-block;
	margin-bottom: 30px
	padding: 10px;
	position: relative;
	text-align: left;
	width: -moz-calc(50% - 30px);
	width: -webkit-calc(50% - 30px);
	width: calc(50% - 30px);
	z-index: 10;
}

